<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cr.ac.ucr.paraiso.tydilabs">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/TydilabsTheme">
        <activity
            android:name=".ui.LauncherActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/TydilabsTheme.Fullscreen"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/TydilabsTheme.NoActionBar" />
        <activity
            android:name=".ui.CodeReaderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_code_reader"
            android:theme="@style/TydilabsTheme.Fullscreen" />
        <activity
            android:name=".ui.InvalidNetworkActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_invalid_network"
            android:theme="@style/TydilabsTheme.Fullscreen" />
        <activity
            android:name=".ui.RevisionsActivity"
            android:parentActivityName="cr.ac.ucr.paraiso.tydilabs.ui.MainActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.ucr.paraiso.tydilabs.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.AssetShowActivity"
            android:label="@string/title_activity_asset_show"
            android:theme="@style/TydilabsTheme" />
        <activity
            android:name=".ui.RevisionShowActivity"
            android:parentActivityName="cr.ac.ucr.paraiso.tydilabs.ui.RevisionsActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cr.ac.ucr.paraiso.tydilabs.ui.RevisionsActivity" />
        </activity>

    </application>

</manifest>